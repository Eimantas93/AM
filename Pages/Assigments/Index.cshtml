@page
@model AssigmentsManager.Pages.Assigments.IndexModel

@{ ViewData["Title"] = "Index"; }

<p>
    <a asp-page="Create">Create New Assigment</a>
</p>

@foreach (var item in Model.Assigment)
{
<div class="container">
    <div class='post-it' contenteditable>
        <h1>@Html.DisplayFor(modelItem => item.Title)</h1>
        <p>@Html.DisplayFor(modelItem => item.Description)</p>
        <p>Deadline: @Html.DisplayFor(modelItem => item.DeadlineDate)</p>
    </div>
    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
    <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
</div>
}